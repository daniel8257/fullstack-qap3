<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
</head>

<body>
    <h1>Products</h1>
    <ul>
        <% products.forEach(function(product) { %>
            <li><a href="/products/<%= product.id %>">
                    <%= product.name %>
                </a> - $<%= product.price %>
            </li>
            <% }); %>
    </ul>
    <a href="/products/new">Add New Product</a>
</body>

</html>